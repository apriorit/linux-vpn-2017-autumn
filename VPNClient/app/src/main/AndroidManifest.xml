<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="apriorit.vpnclient">

<uses-permission android:name="android.permission.INTERNET"/>
<!-- For preventing android to fall into sleeping when VPN is running: -->
<uses-permission android:name="android.permission.WAKE_LOCK"/>
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

<uses-sdk android:minSdkVersion="14"/>

<application android:label="@string/app" android:icon="@mipmap/ic_launcher">

    <activity android:name="apriorit.vpnclient.VpnClient"
        android:configChanges="orientation|keyboardHidden">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
    </activity>

    <service android:name="apriorit.vpnclient.CustomVpnService"
        android:permission="android.permission.BIND_VPN_SERVICE">
        <intent-filter>
            <action android:name="android.net.VpnService"/>
        </intent-filter>
    </service>
</application>
</manifest>